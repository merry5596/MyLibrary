<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7CBCAD9C"
    android:orientation="vertical"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tvTitleInfo"
                android:textSize="18sp" />

            <View
                android:id="@+id/view16"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivImageInfo"
                    android:layout_width="175dp"
                    android:layout_height="220dp"
                    app:srcCompat="@android:mipmap/sym_def_app_icon" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ScrollView
                    android:layout_width="229dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="저자" />

                        <View
                            android:id="@+id/view7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A88C79" />

                        <TextView
                            android:id="@+id/tvAuthorInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="출판사" />

                        <View
                            android:id="@+id/view8"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A88C79" />

                        <TextView
                            android:id="@+id/tvPublisherInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="출판일" />

                        <View
                            android:id="@+id/view9"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A88C79" />

                        <TextView
                            android:id="@+id/tvPubdateInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/view5"
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="정가" />

                        <View
                            android:id="@+id/view10"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#A88C79" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvPriceInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="원"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvIsbnInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="책 소개" />

            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A88C79" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true" />

            <RadioGroup
                android:id="@+id/rgState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbWishBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="위시리스트" />

                <RadioButton
                    android:id="@+id/rbReadingBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="읽는 중" />

                <RadioButton
                    android:id="@+id/rbReadBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="독서록" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/llPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="읽고 있는 페이지 p. " />

                <EditText
                    android:id="@+id/etPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#7CEAE5E0"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPassage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="인상 깊은 구절"
                android:visibility="gone" />

            <View
                android:id="@+id/hPsg"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A88C79"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/llPsg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1" />

                <EditText
                    android:id="@+id/etPassage1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7CEAE5E0"
                    android:ems="10"
                    android:inputType="none" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPsg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2" />

                <EditText
                    android:id="@+id/etPassage2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7CEAE5E0"
                    android:ems="10"
                    android:inputType="none" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPsg3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3" />

                <EditText
                    android:id="@+id/etPassage3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7CEAE5E0"
                    android:ems="10"
                    android:inputType="none" />
            </LinearLayout>

            <Button
                android:id="@+id/btnPsgAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="구절 추가"
                android:visibility="gone"
                app:backgroundTint="#8E8881" />

            <TextView
                android:id="@+id/tvReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="독후감"
                android:visibility="gone" />

            <View
                android:id="@+id/hReview"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A88C79"
                android:visibility="gone" />

            <RatingBar
                android:id="@+id/rbRate"
                style="@style/Widget.AppCompat.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etReview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#7CEAE5E0"
                android:ems="10"
                android:inputType="none"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="저장"
                app:backgroundTint="#A88C79" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>